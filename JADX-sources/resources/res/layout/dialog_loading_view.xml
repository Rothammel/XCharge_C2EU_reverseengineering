        <ImageView android:id="@+id/iv_point_1" android:background="@drawable/ic_dialog_loading_point" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <ImageView android:id="@+id/iv_point_2" android:background="@drawable/ic_dialog_loading_point" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5px"/>
        <ImageView android:id="@+id/iv_point_3" android:background="@drawable/ic_dialog_loading_point" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5px"/>
