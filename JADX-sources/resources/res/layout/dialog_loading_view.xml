<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_gravity="center" android:background="@drawable/ic_loading_bg" android:layout_width="@dimen/dialog_loading_width" android:layout_height="@dimen/dialog_loading_height">
