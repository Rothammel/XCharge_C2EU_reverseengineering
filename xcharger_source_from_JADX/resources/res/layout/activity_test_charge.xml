<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_gravity="center" android:layout_width="@dimen/item_width" android:layout_height="@dimen/item_height">
    <include layout="@layout/layout_base"/>
    <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:textSize="26px" android:textColor="@color/white" android:ellipsize="end" android:gravity="center" android:id="@+id/tv_wifi" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
        <TextView android:textSize="32px" android:textColor="@color/white" android:gravity="center" android:layout_gravity="top|center_vertical|center_horizontal|center" android:id="@+id/tv_state" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:textSize="32px" android:textColor="#ff0000" android:gravity="center" android:layout_gravity="top|center_vertical|center_horizontal|center" android:id="@+id/tv_error" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:textSize="26px" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/tv_content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="测试内容"/>
    </LinearLayout>
    <RelativeLayout android:gravity="center" android:layout_gravity="bottom" android:orientation="vertical" android:layout_width="@dimen/item_width" android:layout_height="200px">
        <TextView android:textSize="28px" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_bottom" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="10px" android:text="测试项目" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</FrameLayout>
